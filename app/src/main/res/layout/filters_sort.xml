<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@android:color/transparent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <syncbros.com.explore.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room Category"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="14dp"
                        android:textSize="20sp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp">

                        <Button
                            android:id="@+id/silver_select"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape_default"
                            android:onClick="onSilverSelectClick"
                            android:text="SILVER"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/gold_select"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape_default"
                            android:onClick="onGoldSelectClick"
                            android:text="GOLD"
                            android:textAlignment="center"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/platinum_select"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape_default"
                            android:onClick="onPlatinumSelectClick"
                            android:text="PLATINUM"
                            android:textAlignment="center"

                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <syncbros.com.explore.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Category"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="14dp"
                        android:textSize="20sp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp">

                            <Button
                                android:id="@+id/three_select"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_shape_default"
                                android:onClick="onThreeSelectClick"
                                android:text="3 stars"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/five_select"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_shape_default"
                                android:onClick="onFiveSelectClick"
                                android:text="5 STARS"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/seven_select"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_shape_default"
                                android:onClick="onSevenSelectClick"
                                android:text="7 STARS"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                        </LinearLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <syncbros.com.explore.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Name"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="14dp"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hotel_name_select"
                            android:hint="Pearl Continental"
                            android:textColor="@color/black"
                            android:maxLines="1"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <syncbros.com.explore.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="14dp"
                        android:textSize="20sp" />

                    <org.florescu.android.rangeseekbar.RangeSeekBar
                        android:id="@+id/priceRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="30dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/apply_button"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="onApplyClick"
        android:text="APPLY"
        android:textAlignment="center" />




</LinearLayout>