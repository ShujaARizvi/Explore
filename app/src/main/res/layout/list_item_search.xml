<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:elevation="25dp"
    android:background="@drawable/card_view_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/pc"
            android:id="@+id/hotel_image_search"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <syncbros.com.explore.CustomTextView
                    android:id="@+id/room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gold_shape"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="GOLD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">


                    <syncbros.com.explore.CustomTextView

                        android:id="@+id/stars_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="5" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/star_shuja" />

                </LinearLayout>


            </LinearLayout>

            <syncbros.com.explore.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:fontFamily=""
                android:id="@+id/hotel_search_price"
                android:text="Rs 10000 / Night"
                />
            <syncbros.com.explore.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/hotel_name_search"
                android:text="Pearl Continental"
                android:layout_marginTop="8dp"
                />

            <syncbros.com.explore.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:id="@+id/hotelLocation"
                android:text="Clifton, Karachi"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

